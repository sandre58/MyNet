<pages:AutoBuildPage x:Class="MyNet.Avalonia.Demo.Pages.CarouselsPage"
                     xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:my="http://mynet.com/avalonia"
                     xmlns:pages="clr-namespace:MyNet.Avalonia.Demo.Pages"
                     ClipToBounds="False"
                     mc:Ignorable="d">

    <DockPanel>

        <!-- Settings -->
        <HeaderedContentControl Classes="Settings" DockPanel.Dock="Right">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <HeaderedContentControl Classes="Labelled Watermark" Header="{my:Resource Type}">
                        <ListBox Name="Type" SelectedIndex="0" SelectionChanged="Type_SelectionChanged">
                            <ListBoxItem Content="{my:Resource Dots}" />
                            <ListBoxItem Content="{my:Resource Columnar}" />
                            <ListBoxItem Content="{my:Resource Lines}" />
                        </ListBox>
                    </HeaderedContentControl>
                    <HeaderedContentControl Classes="Labelled Watermark" Header="{my:Resource Position}">
                        <ListBox Name="Position" SelectedIndex="1" SelectionChanged="Position_SelectionChanged">
                            <ListBoxItem Content="{my:Resource Left}" />
                            <ListBoxItem Content="{my:Resource Center}" />
                            <ListBoxItem Content="{my:Resource Right}" />
                        </ListBox>
                    </HeaderedContentControl>
                </StackPanel>
            </ScrollViewer>
        </HeaderedContentControl>

        <!-- Fields -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel Name="Root" Classes="Large" Grid.IsSharedSizeScope="True" />
        </ScrollViewer>

    </DockPanel>
</pages:AutoBuildPage>