<Project>

    <!-- To override -->
    <PropertyGroup>
        <PackageIcon>$(ProductName).png</PackageIcon>
        <Description></Description>
        <PackageTags>utilities;dotnet;tools</PackageTags>
    </PropertyGroup>

    <PropertyGroup>

        <!-- NuGet information -->
        <PackageVersion Condition="'$(VersionSuffix)' != ''">$(Version)-$(VersionSuffix)</PackageVersion>
        <PackageVersion Condition="'$(VersionSuffix)' == ''">$(Version)</PackageVersion>
        <PackageOutputPath>$(MSBuildThisFileDirectory)..\packages</PackageOutputPath>
        <PackageProjectUrl>https://github.com/sandre58/MyNet</PackageProjectUrl>
        <PackageReleaseNotes>https://github.com/sandre58/MyNet/releases</PackageReleaseNotes>
        <PackageIconUrl>$(PackageIcon)</PackageIconUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <RepositoryUrl>https://github.com/sandre58/MyNet</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryBranch>main</RepositoryBranch>

        <!-- Debug symbols configuration for better debugging experience -->
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <DebugType>portable</DebugType>

        <!-- Symbols -->
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>

        <!-- SourceLink -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>

        <!-- Reproducible builds -->
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
        <Deterministic>true</Deterministic>
    </PropertyGroup>

    <!-- Embedded files -->
    <ItemGroup>
        <None Include="$(MSBuildThisFileDirectory)..\LICENSE" Pack="true" PackagePath="">
            <Link>_package/LICENSE</Link>
        </None>
        <None Include="$(MSBuildThisFileDirectory)..\assets\$(PackageIcon)" Pack="true" PackagePath="">
            <Link>_package/$(PackageIcon)</Link>
        </None>
        <None Include="$(MSBuildProjectDirectory)\README.md" Pack="true" PackagePath="">
            <Link>_package/README.md</Link>
        </None>
    </ItemGroup>

</Project>
