<Project>
    <!-- Reference: https://docs.microsoft.com/en-us/visualstudio/msbuild/customize-your-build?view=vs-2017 -->

    <!-- Informations -->
    <PropertyGroup>
        <Authors>Stéphane ANDRE</Authors>
        <Owners>Stéphane ANDRE</Owners>
        <Company>My .NET</Company>
        <Copyright>Copyright © 2016-$([System.DateTime]::Now.ToString(yyyy)) - Stéphane ANDRE. All Rights Reserved.</Copyright>
    </PropertyGroup>

    <!-- Configuration -->
    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <LangVersion>preview</LangVersion>
        <NeutralLanguage>fr</NeutralLanguage>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <!-- Output builds -->
        <BaseOutputPath>bin</BaseOutputPath>
        <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>

    <!-- Automatic project type detection -->
    <PropertyGroup>
        <IsTestProject>$(MSBuildProjectName.EndsWith('Tests'))</IsTestProject>
        <IsDemoProject>$(MSBuildProjectName.EndsWith('Demo'))</IsDemoProject>
        <IsPackable>'$(IsDemoProject)' != 'true' And '$(IsTestProject)' != 'true'</IsPackable>
    </PropertyGroup>
    
    <!-- Imports -->
    <Import Project="$(SolutionDir)\build\code-analysis.props" />
    <Import Project="$(SolutionDir)\build\dependencies.props" />
    <Import Project="$(SolutionDir)\build\package.props" Condition="'$(IsPackable)' == 'true'"  />

</Project>
