<pages:AutoBuildPage x:Class="MyNet.Avalonia.Demo.Pages.SplitViewsPage"
                     xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:my="http://mynet.com/avalonia"
                     xmlns:pages="clr-namespace:MyNet.Avalonia.Demo.Pages"
                     ClipToBounds="False"
                     mc:Ignorable="d">

    <DockPanel>

        <!-- Settings -->
        <HeaderedContentControl Classes="Settings" DockPanel.Dock="Right">
            <ScrollViewer HorizontalScrollBarVisibility="Hidden">
                <StackPanel>
                    <HeaderedContentControl Classes="Labelled Left Regular" Header="{my:Resource IsPaneOpen}">
                        <ToggleSwitch Name="IsPaneOpen" IsChecked="False" />
                    </HeaderedContentControl>
                    <HeaderedContentControl Classes="Labelled Left Regular" Header="{my:Resource UseOverlay}">
                        <ToggleSwitch Name="UseOverlay" IsChecked="False" />
                    </HeaderedContentControl>
                    <ComboBox Name="DisplayMode"
                              DisplayMemberBinding="{ReflectionBinding Display}"
                              ItemsSource="{my:EnumSource {x:Type SplitViewDisplayMode}}"
                              PlaceholderText="{my:Resource DisplayMode}"
                              SelectedIndex="0"
                              SelectedValueBinding="{ReflectionBinding Value}" />
                    <HeaderedContentControl Classes="Labelled Watermark" Header="{my:Resource Placement}">
                        <ListBox Name="Placement"
                                 DisplayMemberBinding="{ReflectionBinding Display}"
                                 ItemTemplate="{x:Null}"
                                 ItemsSource="{my:EnumSource {x:Type SplitViewPanePlacement}}"
                                 SelectedIndex="0"
                                 SelectedValueBinding="{ReflectionBinding Value}" />
                    </HeaderedContentControl>
                    <HeaderedContentControl Classes="Labelled Watermark" ClipToBounds="False" Header="{my:Resource CompactPaneLength}">
                        <Slider Name="CompactPaneLength"
                                IsSnapToTickEnabled="True"
                                Maximum="100"
                                Minimum="0"
                                Value="50" />
                    </HeaderedContentControl>
                    <HeaderedContentControl Classes="Labelled Watermark" ClipToBounds="False" Header="{my:Resource OpenPaneLength}">
                        <Slider Name="OpenPaneLength"
                                IsSnapToTickEnabled="True"
                                Maximum="500"
                                Minimum="100"
                                Value="250" />
                    </HeaderedContentControl>
                </StackPanel>
            </ScrollViewer>
        </HeaderedContentControl>

        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel Name="Root" Classes="Large" Grid.IsSharedSizeScope="True" />
        </ScrollViewer>
    </DockPanel>
</pages:AutoBuildPage>