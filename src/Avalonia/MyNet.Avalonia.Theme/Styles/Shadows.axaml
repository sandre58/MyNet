<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="http://mynet.com/avalonia">

    <!-- Control.Shadow -->
    <Style Selector=":is(TemplatedControl):not(ListBox):not(TabControl)">
        <Style Selector="^.Shadow">
            <Setter Property="ClipToBounds" Value="False" />
            <Setter Property="my:ShadowAssist.ShadowDepth" Value="{StaticResource MyNet.ShadowDepth.Control}" />
        </Style>
    </Style>

    <!-- Container.Shadow -->
    <Style Selector=":is(ContentControl), Border, Calendar, ColorSpectrum, Ellipse">
        <Style Selector="^.Shadow">
            <Setter Property="ClipToBounds" Value="False" />
            <Setter Property="my:ShadowAssist.ShadowDepth" Value="{StaticResource MyNet.ShadowDepth.Container}" />
        </Style>
    </Style>
</Styles>
