<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:my="http://mynet.com/avalonia"
                    xmlns:sys="clr-namespace:System;assembly=netstandard"
                    x:CompileBindings="True">

    <MenuFlyout x:Key="MyNet.MenuFlyout.Embedded.SelectableTextBlock" x:DataType="sys:Object" Placement="Bottom">
        <MenuItem Command="{Binding $parent[SelectableTextBlock].Copy}"
                  Header="{my:Resource Copy}"
                  Icon="{my:Icon ContentCopy}"
                  InputGesture="{Binding Converter={x:Static my:KeyGesturesConverter.Default}, ConverterParameter=copy}"
                  IsEnabled="{Binding $parent[SelectableTextBlock].CanCopy}" />
        <MenuItem Command="{Binding $parent[SelectableTextBlock].SelectAll}"
                  Header="{my:Resource SelectAll}"
                  Icon="{my:Icon SelectAll}"
                  InputGesture="{Binding Converter={x:Static my:KeyGesturesConverter.Default}, ConverterParameter=selectall}" />
    </MenuFlyout>

    <ControlTheme x:Key="{x:Type SelectableTextBlock}" TargetType="SelectableTextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Cursor" Value="Ibeam" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="SelectionBrush" Value="{my:Brush $self.(my:ThemeAssist.PrimaryColor), Opacity={StaticResource MyNet.Opacity.Overlay}}" />
        <Style Selector="^[IsEnabled=True]">
            <Setter Property="ContextFlyout" Value="{StaticResource MyNet.MenuFlyout.Embedded.SelectableTextBlock}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
