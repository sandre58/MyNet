<my:ContentDialog x:Class="MyNet.Avalonia.Demo.Views.Dialogs.LoginDialogView"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:my="http://mynet.com/avalonia"
                  xmlns:vm="clr-namespace:MyNet.Avalonia.Demo.ViewModels.Dialogs"
                  d:DesignHeight="450"
                  d:DesignWidth="800"
                  Header="{my:Resource Login}"
                  x:DataType="vm:LoginDialogViewModel"
                  mc:Ignorable="d">
    <my:Form LabelPosition="Left" LabelWidth="*">
        <TextBox Width="300"
                 my:FormItem.IsRequired="True"
                 my:FormItem.Label="{my:Icon InformationCircle}"
                 Text="{Binding Login}"
                 Watermark="{my:Resource Name}" />
        <TextBox Width="300"
                 my:FormItem.IsRequired="True"
                 my:FormItem.Label="{my:Icon Lock}"
                 PasswordChar="*"
                 RevealPassword="True"
                 Text="{Binding Password}"
                 Watermark="{my:Resource Password}" />
    </my:Form>
</my:ContentDialog>
