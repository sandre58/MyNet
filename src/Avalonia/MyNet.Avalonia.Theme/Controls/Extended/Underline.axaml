<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:my="http://mynet.com/avalonia">

    <ControlTheme x:Key="{x:Type my:Underline}" TargetType="my:Underline">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="InactiveHeight" Value="0" />
        <Setter Property="ActiveHeight" Value="2" />
        <Setter Property="BorderBrush" Value="{DynamicResource MyNet.Brush.Control.Border}" />
        <Setter Property="ActiveBrush" Value="{DynamicResource MyNet.Brush.Primary}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel Name="PART_RootPanel">
                    <Rectangle Name="PART_BaseBorder" Height="{TemplateBinding InactiveHeight}" Fill="{TemplateBinding BorderBrush}" />
                    <Rectangle Name="PART_ActiveIndicator" Height="{TemplateBinding ActiveHeight}" Fill="{TemplateBinding ActiveBrush}" />
                </Panel>
            </ControlTemplate>
        </Setter>

        <!-- Transitions -->
        <Style Selector="^:not(.no-transitions) /template/ Rectangle#PART_ActiveIndicator">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Easing="CircularEaseOut" Property="Width" Duration="{StaticResource MyNet.Timespan.Underline}" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="^ /template/ Rectangle#PART_ActiveIndicator">
            <Setter Property="Width" Value="0" />
        </Style>

        <!-- Active -->
        <Style Selector="^[IsActive=True]">
            <Style Selector="^ /template/ Rectangle#PART_ActiveIndicator">
                <Setter Property="Width" Value="{Binding $parent[Control].Bounds.Width}" />
            </Style>
        </Style>

        <!-- Disabled -->
        <Style Selector="^:disabled /template/ Rectangle#PART_BaseBorder">
            <Setter Property="StrokeDashArray" Value="1,2" />
        </Style>

    </ControlTheme>
</ResourceDictionary>