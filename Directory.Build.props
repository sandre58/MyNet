<Project>
    <!-- Reference: https://docs.microsoft.com/en-us/visualstudio/msbuild/customize-your-build?view=vs-2017 -->

    <!-- Informations -->
    <PropertyGroup>
        <Authors>Stéphane ANDRE</Authors>
        <Owners>Stéphane ANDRE</Owners>
        <Company>My .NET</Company>
        <Copyright>Copyright © 2016-$([System.DateTime]::Now.ToString(yyyy)) - Stéphane ANDRE. All Rights Reserved.</Copyright>
    </PropertyGroup>

    <!-- Automatic project type detection -->
    <PropertyGroup>
        <IsTestProject>$(MSBuildProjectName.EndsWith('Tests'))</IsTestProject>
    <IsDemoProject>$(MSBuildProjectName.Contains('.Demo'))</IsDemoProject>
        <IsPackable Condition="'$(IsDemoProject)' != 'True' And '$(IsTestProject)' != 'True'">true</IsPackable>
    </PropertyGroup>

    <!-- Configuration -->
    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <LangVersion>preview</LangVersion>
        <NeutralLanguage>fr</NeutralLanguage>
        <Nullable Condition="'$(Nullable)' == ''">enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <!-- Output builds -->
        <BaseOutputPath Condition="'$(IsDemoProject)' != 'True'">bin</BaseOutputPath>
        <BaseOutputPath Condition="'$(IsDemoProject)' == 'True'">$(SolutionDir)\artifacts\demos\$(MSBuildProjectName)</BaseOutputPath>
        <AppendTargetFrameworkToOutputPath Condition="'$(IsDemoProject)' != 'True'">true</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>
    
    <!-- Imports -->
    <Import Project="$(SolutionDir)/build/code-analysis.props" Condition="Exists('$(SolutionDir)/build/code-analysis.props')" />
    <Import Project="$(SolutionDir)/build/dependencies.props" Condition="Exists('$(SolutionDir)/build/dependencies.props')" />
    <Import Project="$(SolutionDir)/build/package.props" Condition="Exists('$(SolutionDir)/build/package.props') and '$(IsPackable)' == 'true'" />

</Project>
