<Project>
    <!-- Reference: https://docs.microsoft.com/en-us/visualstudio/msbuild/customize-your-build?view=vs-2017 -->

    <!-- Informations -->
    <PropertyGroup>
        <Authors>Stéphane ANDRE</Authors>
        <Owners>Stéphane ANDRE</Owners>
        <Company>My .NET</Company>
        <Copyright>Copyright © 2016-$([System.DateTime]::Now.ToString(yyyy)) - Stéphane ANDRE. All Rights Reserved.</Copyright>
    </PropertyGroup>

    <!-- Automatic project type detection -->
    <PropertyGroup>
        <IsTestProject>$(MSBuildProjectName.EndsWith('Tests'))</IsTestProject>
        <IsPackable Condition="'$(IsTestProject)' == 'True'">false</IsPackable>
        <IsPackable Condition="'$(IsTestProject)' != 'True'">true</IsPackable>
    </PropertyGroup>

    <!-- Configuration -->
    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <LangVersion>preview</LangVersion>
        <NeutralLanguage>fr</NeutralLanguage>
        <Nullable Condition="'$(Nullable)' == ''">enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <EnableAnalyzers Condition="'$(EnableAnalyzers)' == ''">true</EnableAnalyzers>

        <!-- Output builds -->
        <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>

    <!-- Versioning -->
    <PropertyGroup>

        <!-- GitVersion - Version de base synchronisée -->
        <GitVersionMajor Condition="'$(GitVersion_Major)' != ''">$(GitVersion_Major)</GitVersionMajor>
        <GitVersionMinor Condition="'$(GitVersion_Minor)' != ''">$(GitVersion_Minor)</GitVersionMinor>
        <GitVersionMajor Condition="'$(GitVersionMajor)' == ''">1</GitVersionMajor>
        <GitVersionMinor Condition="'$(GitVersionMinor)' == ''">0</GitVersionMinor>

        <!-- Patch by defaullt (Can be override by each project) -->
        <PatchVersion Condition="'$(PatchVersion)' == ''">0</PatchVersion>

        <!-- Final version -->
        <Version>$(GitVersionMajor).$(GitVersionMinor).$(PatchVersion)</Version>
        <AssemblyVersion>$(GitVersionMajor).$(GitVersionMinor).0.0</AssemblyVersion>
        <FileVersion>$(GitVersionMajor).$(GitVersionMinor).$(PatchVersion).0</FileVersion>

        <!-- Preversion (preview, alpha, etc.) -->
        <VersionSuffix Condition="'$(GitVersion_PreReleaseLabel)' != ''">$(GitVersion_PreReleaseLabel).$(GitVersion_PreReleaseNumber)</VersionSuffix>

    </PropertyGroup>
    
    <!-- Configuration for test projects - use .runsettings for coverage -->
    <PropertyGroup Condition="'$(IsTestProject)' == 'True'">
        <!-- Path to the .runsettings file -->
        <RunSettingsFile>$(MSBuildThisFileDirectory).runsettings</RunSettingsFile>

        <!-- Force VSTest to use our runsettings -->
        <VSTestSetting>$(RunSettingsFile)</VSTestSetting>
        <VSTestCLIRunSettings>$(RunSettingsFile)</VSTestCLIRunSettings>
    </PropertyGroup>

    <!-- Include runsettings file in test projects -->
    <ItemGroup Condition="'$(IsTestProject)' == 'True' And Exists('$(RunSettingsFile)')">
        <None Include="$(RunSettingsFile)" Link=".runsettings" Visible="false" />
    </ItemGroup>

    <!-- Imports -->
    <Import Project="$(MSBuildThisFileDirectory)/build/code-analysis.props" Condition="Exists('$(MSBuildThisFileDirectory)/build/code-analysis.props') and '$(EnableAnalyzers)' == 'true'" />
    <Import Project="$(MSBuildThisFileDirectory)/build/dependencies.props" Condition="Exists('$(MSBuildThisFileDirectory)/build/dependencies.props')" />
    <Import Project="$(MSBuildThisFileDirectory)/build/package.props" Condition="Exists('$(MSBuildThisFileDirectory)/build/package.props') and '$(IsPackable)' == 'true'" />

</Project>
