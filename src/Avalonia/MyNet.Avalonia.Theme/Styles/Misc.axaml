<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="http://mynet.com/avalonia">

    <!-- Circle -->
    <Style Selector=":is(TemplatedControl):not(ListBox):not(TabControl).Circle">
        <Setter Property="CornerRadius" Value="9999" />
        <Setter Property="FocusAdorner">
            <FocusAdornerTemplate>
                <Rectangle Theme="{StaticResource MyNet.Theme.Rectangle.Focus}" />
            </FocusAdornerTemplate>
        </Setter>
    </Style>

    <Style Selector=":is(TextBox), :is(ComboBox), :is(CalendarDatePicker), :is(NumericUpDown), :is(DatePicker), :is(TimePicker), :is(my|ColorPicker), :is(my|CodeBlock),  :is(my|MultiComboBox),  :is(my|Tag), :is(my|TagBox)">
        <Style Selector="^.Circle">
            <Setter Property="FocusAdorner" Value="{x:Null}" />
        </Style>
    </Style>

    <Style Selector=":is(TemplatedControl).HiddenFocus">
        <Setter Property="FocusAdorner" Value="{x:Null}" />
    </Style>
</Styles>
